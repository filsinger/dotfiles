[color]
	ui = true
[git-p4]
	detectRename = true
[core]
	editor = emacs-run
	excludesfile = ~/.gitignore
	autocrlf = input
[mergetool]
	keepBackup = true
[alias]
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
[include]
	path = .gitconfig.private

[push]
	default = simple
